<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samtech.smartprint.HelpBills">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Step 1: Click Bill payment" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_below="@+id/textView23"
                android:layout_centerHorizontal="true"
                android:src="@drawable/billa" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView12"
                android:layout_centerHorizontal="true"
                android:text="Step 2: Select your bill option" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/textView24"
                android:layout_centerHorizontal="true"
                android:src="@drawable/billb" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView14"
                android:layout_centerHorizontal="true"
                android:text="Step 3: Click Submit" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/textView25"
                android:layout_centerHorizontal="true"
                android:src="@drawable/billc" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView15"
                android:layout_centerHorizontal="true"
                android:text="Step 4: fill the Transaction pin and click Proceed" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/textView26"
                android:layout_centerHorizontal="true"
                android:src="@drawable/billd" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
